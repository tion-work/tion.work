# tion-backend Makefile

.PHONY: help build run test clean deps dev docker-build docker-run seed

# Default target
help:
	@echo "tion-backend - Go Gin API Server"
	@echo ""
	@echo "ğŸš€ Development commands:"
	@echo "  deps        - Install dependencies"
	@echo "  build       - Build the application"
	@echo "  run         - Run the application"
	@echo "  dev         - Run in development mode with hot reload"
	@echo "  test        - Run tests"
	@echo "  clean       - Clean build artifacts"
	@echo "  seed        - Seed database with initial data"
	@echo ""
	@echo "ğŸ³ Docker commands:"
	@echo "  docker-build - Build Docker image"
	@echo "  docker-run   - Run Docker container"
	@echo ""

# Install dependencies
deps:
	@echo "ğŸ“¦ Installing dependencies..."
	go mod tidy
	go mod download

# Build the application
build:
	@echo "ğŸ”¨ Building application..."
	go build -o bin/tion-backend cmd/server/main.go

# Run the application
run: build
	@echo "ğŸš€ Starting tion-backend server..."
	./bin/tion-backend

# Run in development mode
dev:
	@echo "ğŸš€ Starting development server..."
	go run cmd/server/main.go

# Run tests
test:
	@echo "ğŸ§ª Running tests..."
	go test ./...

# Clean build artifacts
clean:
	@echo "ğŸ§¹ Cleaning build artifacts..."
	rm -rf bin/
	go clean

# Build Docker image
docker-build:
	@echo "ğŸ³ Building Docker image..."
	docker build -t tion-backend .

# Run Docker container
docker-run:
	@echo "ğŸ³ Running Docker container..."
	docker run -p 8080:8080 --env-file .env tion-backend

# Install air for hot reload (if not installed)
install-air:
	@echo "ğŸ“¦ Installing air for hot reload..."
	go install github.com/cosmtrek/air@latest

# Run with hot reload (requires air)
dev-air: install-air
	@echo "ğŸš€ Starting development server with hot reload..."
	air

# Seed database with initial data
seed:
	@echo "ğŸŒ± Seeding database with initial data..."
	go run scripts/seed.go
